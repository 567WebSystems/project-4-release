<% if(success != ''){%>
  <section class="alert">
    <strong><%= success%></strong>
  </section>
  <%}%>
<section id="appointmentForm">
  <%var count = 0%>
  <% event.forEach(function (eve) { %>
  <%count++%>
  <h1>Update Appointment <%= eve.summary %></h1>
  <form method="post" action="/appointment/view-appointment/update/<%= eve._id%>" id="formVal">
    <table id="form">
      <tr id="mongoID">
        <td>mongoid:</td>
        <td><input type="text" id="mongoID" name="mongoID" value="<%= eve._id %>"></td>
      </tr>
      <tr id="eventID">
        <td>id:</td>
        <td><input type="text" id="eventID" name="eventID" value="<%= eve.event_id %>"></td>
      </tr>
      <tr>
        <td>Summary:</td>
        <td><input type="text" id="summary" name="summary" value="<%= eve.summary %>"></td>
      </tr>
      <tr>
        <td>Location:</td>
        <td><input type="text" id="location" name="location" value="<%= eve.location %>"></td>
      </tr>
      <tr>
        <td>Description:</td>
        <td><input type="text" id="description" name="description" value="<%= eve.description %>"></td>
      </tr>
      <tr>
        <td>Start Date:</td>
        <td><input type="date" id="startDate" name="startDate" placeholder="MM/DD/YYYY"></td>
      </tr>
      <tr>
        <td>End Date:</td>
        <td><input type="date" id="endDate" name="endDate" placeholder="MM/DD/YYYY"></td>
      </tr>
      <tr>
        <td>Start Time:</td>
        <td><input type="time" id="startTime" name="startTime" placeholder="HH:MM AM/PM"></td>
      </tr>
      <tr>
        <td>End Time</td>
        <td><input type="time" id="endTime" name="endTime" placeholder="HH:MM AM/PM"></td>
      </tr>
      <tr>
        <td>Recurrence: (#)</td>
        <td><input type="number" id="recurrence" name="recurrence" placeholder="1"></td>
      </tr>
      <tr>
        <td>Attendee Email(s):</td>
        <td><input type="email" id="attendees" name="attendees" multiple placeholder="xyz@gmail.com, abc@gmail.com"></td>
      </tr>
      <tr>
        <td>Reminders:</td>
        <td><input type="text" id="reminders" name="reminders" placeholder="Reminder Information"></td>
      </tr>
    </table>
    <br>
    <span id="error"></span>
    <input type="button" value="Update" id="form-btn" /> 
  </form>
  <% }) %>
</section>

