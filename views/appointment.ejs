<% if(success == 'success'){%>
<section class="alert">
  <strong>Appointment booked successfully!</strong>
</section>
<%}else if(success == 'fail'){%>
<section class="alert red-alert">
  <strong>Error while creating Event</strong>
</section>
  <%}%>
<section id="appointmentForm">
  <h1>Welcome, <%=user.userName%></h1>
  <form method="post" action="/appointment" id="formVal">
  <h3>Appointment Form</h3>
  <table id="form">
    <tr>
      <td>Summary:</td>
      <td><input type="text" id="summary" name="summary" placeholder="Event Summary"></td>
    </tr>
    <tr>
      <td>Location:</td>
      <td><input type="text" id="location" name="location" placeholder="Chicago, IL"></td>
    </tr>
    <tr>
      <td>Description:</td>
      <td><input type="text" id="description" name="description" placeholder="Tell about appointment"></td>
    </tr>
    <tr>
      <td>Start Date:</td>
      <td><input type="date" id="startDate" name="startDate" placeholder="MM/DD/YYYY"></td>
    </tr>
    <tr>
      <td>End Date:</td>
      <td><input type="date" id="endDate" name="endDate" placeholder="MM/DD/YYYY"></td>
    </tr>
    <tr>
      <td>Start Time:</td>
      <td><input type="time" id="startTime" name="startTime" placeholder="HH:MM AM/PM"></td>
    </tr>
    <tr>
      <td>End Time</td>
      <td><input type="time" id="endTime" name="endTime" placeholder="HH:MM AM/PM"></td>
    </tr>
    <tr>
      <td>Recurrence: (#)</td>
      <td><input type="number" id="recurrence" name="recurrence" placeholder="1"></td>
    </tr>
    <tr>
      <td>Attendee Email(s):</td>
      <td><input type="email" id="attendees" name="attendees" multiple placeholder="xyz@gmail.com, abc@gmail.com"></td>
    </tr>
    <tr>
      <td>Reminders:</td>
      <td><input type="text" id="reminders" name="reminders" placeholder="Reminder Information"></td>
    </tr>
  </table>
  <br>
  <span id="error"></span>
  <input type="button" value="Submit" id="form-btn" />
</form>
</section>

